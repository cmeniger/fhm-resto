            </div>
            <div class="row">
                {{ form_label(form.partner) }}
                {{ form_errors(form.partner) }}
                {{ form_widget(form.partner) }}
            </div>
            <div class="row">
                {{ form_label(form.contact) }}
                {{ form_errors(form.contact) }}
                {{ form_widget(form.contact) }}
            </div>
        </fieldset>
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.create.form.fieldset.social')|trans }}</legend>
            <div class="form-social">
                <div class="row collapse">
                    <div class="small-3 large-2 columns">
                        <span class="prefix facebook social-icons"><i class="fa fa-facebook"></i></span>
                    </div>
                    <div class="small-7 large-7 columns">
                        {{ form_errors(form.social_facebook) }}
                        {{ form_widget(form.social_facebook) }}
                    </div>
                    <div class="small-2 large-3 columns">
                        {{ form_errors(form.social_facebook_id) }}
