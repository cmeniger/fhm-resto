                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="large-6 medium-6 small-12 columns">
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.create.form.fieldset.media')|trans }}</legend>
            <div class="row">
                {{ form_label(form.background) }}
                {{ form_errors(form.background) }}
                {{ form_widget(form.background) }}
