            </li>
        </ul>
    </div>
{% else %}
    <div class="gallery home-bottom">
        <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
            {% if items|length > 0 %}
                {% for item in items %}
                    <li>
                        <div class="image" style="background:url({{ item.getImage()|media('m') }})"></div>
                    </li>
                {% endfor %}
            {% endif %}
            {% if videos|length > 0 %}
                {% for video in videos %}
                    <li>
                        {{ video.getVideo()|video(250,200)|raw }}
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </div>
{% endif %}
<script>
    $(document).ready(function ()
    {
        $(".gallery.home-bottom li")
            .on("inViewBegin", function ()
            {
                $(this).addClass("animated").addClass("zoomIn");
            })
            .on("inViewEnd", function ()
            {
                $(this).removeClass("animated").removeClass("zoomIn");
            });
    });
</script>