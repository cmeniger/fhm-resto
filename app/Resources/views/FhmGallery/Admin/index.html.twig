{% block content_data_header %}
    {{ parent() }}
    <th>{{ (instance.translation ~ '.admin.index.table.header.albums')|trans }}</th>
    <th>{{ (instance.translation ~ '.admin.index.table.header.images')|trans }}</th>
    <th>{{ (instance.translation ~ '.admin.index.table.header.videos')|trans }}</th>
{% endblock %}

 {% block content_data_body %}
     {{ parent() }}
     <td>{{ object.getAlbums()|length }}</td>
