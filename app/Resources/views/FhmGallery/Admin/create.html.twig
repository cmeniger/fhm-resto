{% trans_default_domain instance.domain %}
{% extends "::FhmFhm/Admin/create.html.twig" %}

{% block content_data_fields_data %}
    <div class="large-6 medium-6 small-12 columns">
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.create.form.fieldset.data')|trans }}</legend>
            <div class="row">
                {{ form_label(form.title) }}
                {{ form_errors(form.title) }}
                {{ form_widget(form.title) }}
            </div>
            <div class="row">
                {{ form_label(form.subtitle) }}
                {{ form_errors(form.subtitle) }}
                {{ form_widget(form.subtitle) }}
            </div>
            <div class="row">
                {{ form_label(form.resume) }}
                {{ form_errors(form.resume) }}
                {{ form_widget(form.resume) }}
            </div>
            <div class="row">
                {{ form_label(form.content) }}
                {{ form_errors(form.content) }}
                {{ form_widget(form.content) }}
            </div>
        </fieldset>
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.create.form.fieldset.media')|trans }}</legend>
            <div class="row">
                {{ form_label(form.image) }}
                {{ form_errors(form.image) }}
                {{ form_widget(form.image) }}
            </div>
        </fieldset>
    </div>
    <div class="large-6 medium-6 small-12 columns">
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.create.form.fieldset.items')|trans }}</legend>
            <div class="row">
                {{ form_label(form.items) }}
                {{ form_errors(form.items) }}
                {{ form_widget(form.items) }}
            </div>
            <div class="row">
                {{ form_label(form.order_item) }}
                {{ form_errors(form.order_item) }}
                {{ form_widget(form.order_item) }}
            </div>
            <div class="row">
                {{ form_errors(form.add_global_item) }}
                {{ form_label(form.add_global_item) }}
                <div class="switch">
                    {{ form_widget(form.add_global_item) }}
                    <label for="{{ form.add_global_item.vars.id }}"></label>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.create.form.fieldset.videos')|trans }}</legend>
            <div class="row">
                {{ form_label(form.videos) }}
                {{ form_errors(form.videos) }}
                {{ form_widget(form.videos) }}
            </div>
            <div class="row">
                {{ form_label(form.order_video) }}
                {{ form_errors(form.order_video) }}
                {{ form_widget(form.order_video) }}
            </div>
            <div class="row">
                {{ form_errors(form.add_global_video) }}
                {{ form_label(form.add_global_video) }}
                <div class="switch">
                    {{ form_widget(form.add_global_video) }}
                    <label for="{{ form.add_global_video.vars.id }}"></label>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.create.form.fieldset.albums')|trans }}</legend>
            <div class="row">
                {{ form_label(form.albums) }}
                {{ form_errors(form.albums) }}
                {{ form_widget(form.albums) }}
            </div>
            <div class="row">
                {{ form_label(form.order) }}
                {{ form_errors(form.order) }}
                {{ form_widget(form.order) }}
            </div>
        </fieldset>
    </div>
{% endblock %}

{% block content_data_submit_list_data %}
    {{ parent() }}
    <li>
        <hr/>
    </li>
    <li>
        <a href="{{ path('fhm_admin_gallery_album') }}" class="button small button-icon button-cubes">{{ ('gallery.album.admin.index.link')|trans }}</a>
    </li>
    <li>
        <a href="{{ path('fhm_admin_gallery') }}" class="button small button-icon button-th">{{ ('gallery.admin.index.link')|trans }}</a>
    </li>
    <li>
        <a href="{{ path('fhm_admin_gallery_item') }}" class="button small button-icon button-image">{{ ('gallery.item.admin.index.link')|trans }}</a>
    </li>
    <li>
        <a href="{{ path('fhm_admin_gallery_video') }}" class="button small button-icon button-video">{{ ('gallery.video.admin.index.link')|trans }}</a>
    </li>
{% endblock %}