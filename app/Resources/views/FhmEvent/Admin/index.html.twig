{% trans_default_domain instance.domain %}
{% extends "::FhmFhm/Admin/index.html.twig" %}

{% block content_link_data %}
    {{ parent() }}
    <li>
        <a href="{{ path('fhm_admin_event_group') }}" class="button small"><i class="fa fa-calendar"></i> {{ ('event.group.admin.index.link')|trans }}
        </a>
    </li>
{% endblock %}

{% block content_data_action_share_links %}
    {{ parent() }}
    <li>
        <a href="{{ path(instance.source ~ '_admin_' ~ instance.route ~ '_preview', {'id': document.getId()}) }}" title="{{ (instance.translation ~ '.admin.index.table.action.preview')|trans }}" target="_blank"><i class="fa fa-fw fa-search"></i> {{ (instance.translation ~ '.admin.index.table.action.preview')|trans }}
        </a>
    </li>
{% endblock %}

{% block content_data_action_delete_links %}
    {{ parent() }}
    <li>
        <a href="{{ path(instance.source ~ '_admin_' ~ instance.route ~ '_preview', {'id': document.getId()}) }}" title="{{ (instance.translation ~ '.admin.index.table.action.preview')|trans }}" target="_blank"><i class="fa fa-fw fa-search"></i> {{ (instance.translation ~ '.admin.index.table.action.preview')|trans }}
        </a>
    </li>
{% endblock %}

{% block content_data_action_links %}
    {{ parent() }}
    <li>
        <a href="{{ path(instance.source ~ '_admin_' ~ instance.route ~ '_preview', {'id': document.getId()}) }}" title="{{ (instance.translation ~ '.admin.index.table.action.preview')|trans }}" target="_blank"><i class="fa fa-fw fa-search"></i> {{ (instance.translation ~ '.admin.index.table.action.preview')|trans }}
        </a>
    </li>
{% endblock %}

{% block content_data_header %}
    {{ parent() }}
    <th>{{ (instance.translation ~ '.admin.index.table.header.start')|trans }}{{ macroSort.print('date_start', sort) }}</th>
    <th>{{ (instance.translation ~ '.admin.index.table.header.end')|trans }}{{ macroSort.print('date_end', sort) }}</th>
    <th>{{ (instance.translation ~ '.admin.index.table.header.eventgroups')|trans }}{{ macroSort.print('sort_eventgroup', sort) }}</th>
{% endblock %}

 {% block content_data_body %}
     {{ parent() }}
     <td>{{ document.getDateStart() | localizeddate('full', 'short', app.request.locale) }}</td>
     <td>{{ document.getDateEnd() | localizeddate('full', 'short', app.request.locale) }}</td>
     <td>{{ document.getEventgroups()|length }}</td>
 {% endblock %}