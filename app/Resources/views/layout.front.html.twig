{% extends app.request.isxmlhttprequest ? "::ajax.html.twig" : "::layout.html.twig" %}
{% import "::Macros/breadcrumbs.html.twig" as macroBreadcrumbs %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,400i,700i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Stalemate" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <meta name="format-detection" content="telephone=no">
{% endblock %}

{% block css_main %}
    {{ asset('css/front.css') }}
{% endblock %}

{% block body_all %}
    {{ parent() }}
    <a href="#anchor-top" id="scroll-top"><i class="fa fa-arrow-up"></i></a>
{% endblock %}

{% block body_header %}
    <div id="header">
        {# Menu #}
        {% block menu %}
            {{ render_hinclude(url('fhm_api_menu_detail', {'template':'front'})) }}
        {% endblock %}

        {# Tagline #}
        {% block tagline %}
        {% endblock %}

        {# Breadcrumbs #}
        {% block breadcrumbs %}
            <div class="row">
                {{ breadcrumbs is defined ? macroBreadcrumbs.print(breadcrumbs) : '' }}
            </div>
        {% endblock %}

        {# Flash #}
        {% block flash %}
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div data-alert class="alert-box">
                    {{ flashMessage }}
                    <a href="#" class="close"><i class="fa fa-times"></i></a>
                </div>
            {% endfor %}
        {% endblock %}

        {# Header #}
        {% block header %}
        {% endblock %}
    </div>
{% endblock %}

{% block body_content %}
    <div id="container">
        {% block left %}{% endblock %}
        {% block content %}{% endblock %}
        {% block right %}{% endblock %}
    </div>
{% endblock %}

{% block footer %}
    <div class="clearfix">
        <div class="hidden-for-large-up text-center">
            <img src="{{ asset('images/logo.png') }}" alt=""/>
            <h2 class="icon">{{ 'project.home.default.title'|trans }}</h2>
        </div>
        <div class="columns large-4">
            <h2>{{ 'menu.front.index.sitemap'|trans({},'FhmFhmMenuBundle') }}</h2>
            {{ render(path('fhm_api_menu_detail',{template:'footer','id':'demo'})) }}
        </div>
        <div class="columns large-4">
            <div class="hidden-for-medium-down">
                <img src="{{ asset('images/logo.png') }}" alt=""/>
                <h2 class="icon">{{ 'project.home.default.title'|trans({},'ProjectDefaultBundle') }}</h2>
            </div>
        </div>
        <div class="columns large-4">
            <h2>{{ 'newsletter.front.index.title'|trans({},'FhmNewsletterBundle') }}</h2>
            {{ render(path('fhm_api_newsletter_embed')) }}
            <div class="social-bar">
                <ul>
                    <li>
                        <a href='#' class="facebook" title="Facebook" target="_blank"><i class='fa fa-facebook'></i></a>
                    </li>
                    <li>
                        <a href='#' class="twitter" title="Twitter" target="_blank"><i class='fa fa-twitter'></i></a>
                    </li>
                    <li>
                        <a href='#' class="google" title="Google" target="_blank"><i class='fa fa-google'></i></a>
                    </li>
                    <li>
                        <a href='#' class="instagram" title="Instagram" target="_blank"><i class='fa fa-instagram'></i></a>
                    </li>
                    <li>
                        <a href='#' class="youtube" title="Youtube" target="_blank"><i class='fa fa-youtube'></i></a>
                    </li>
                    <li>
                        <a href='#' class="flux" title="Flux RSS" target="_blank"><i class='fa fa-rss'></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    {{ parent() }}
{% endblock %}