{% trans_default_domain instance.domain %}

<div class="column small-4 column-media">
    {% if object.getType() == 'image' %}
        <div class="preview-media data image" style="background:url('{{ object|media('s') }}') no-repeat center center;"></div>
    {% else %}
        <div class="preview-media data file {{ object.getExtension() }}"></div>
    {% endif %}
</div>
<div class="column small-8 column-description">
    <div>
        <small>{{ (instance.translation ~ '.admin.selector.preview.name')|trans }}</small>
    </div>
    <div class="preview-name">{{ object.getName()|length > 40 ? object.getName()|slice(0,40) ~ '...' : object.getName() }}</div>
    <div>
        <small>{{ (instance.translation ~ '.admin.selector.preview.extension')|trans }}</small>
    </div>
    <div class="preview-extension">{{ object.getExtension() }}</div>
</div>