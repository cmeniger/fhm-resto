{% trans_default_domain instance.domain %}

<div class='data file {{ document.getExtension() }}' media-id='{{ document.getId() }}' media-name='{{ document.getName() }}' media-extension='{{ document.getExtension() }}' media-type='file' title='{{ document.getName() }}'>
    <div class="name">
        {{ document.getName() }}
    </div>
    <div class="extension right">
        <span class="radius label secondary">{{ document.getExtension() }}</span>
    </div>
    <div class="actions view">
        <a href="{{ document|media }}" target="_blank" title="{{ ('media.bloc.download')|trans({},'FhmMediaBundle') }}" download="{{ document.getAlias() ~ '.' ~ document.getExtension() }}"><i class="fa fa-download"></i></a>
        <a href="{{ document|media }}" target="_blank" title="{{ ('media.bloc.detail')|trans({},'FhmMediaBundle') }}"><i class="fa fa-search-plus"></i></a>
    </div>
</div>