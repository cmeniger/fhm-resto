{% trans_default_domain instance.domain %}

<div class="data">
    <div class='item file {{ document.getExtension() }}' title='{{ document.getName() }}'>
        <div class="name">
            {{ document.getName() }}
        </div>
        <div class="extension right">
            <span class="radius label secondary">{{ document.getExtension() }}</span>
        </div>
        <div class="actions">
            <a href="#" data-type="link" data-url="{{ document|link }}" data-title="{{ document.getName() }}" data-text="{{ document.getName() }}" title="{{ ('media.bloc.insert.link')|trans({},'FhmMediaBundle') }}"><i class="fa fa-link"></i></a>
        </div>
    </div>
</div>
