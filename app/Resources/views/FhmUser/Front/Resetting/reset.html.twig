{% set instance = instance|merge({'domain':'FhmUserBundle', 'translation':'user', 'route':'user', 'source':'fhm'}) %}
{% set breadcrumbs = [{'link':path('project_home'), 'text':'project.home.breadcrumb'|trans({},'ProjectDefaultBundle')}, {'link':'', 'text':('user.front.password.breadcrumb')|trans({},'FhmUserBundle'), 'current':true}] %}
{% set document = app.user %}
{% set layout_extend = "::layout.front.html.twig" %}
{% trans_default_domain instance.domain %}
{% extends "::FhmFhm/Front/update.html.twig" %}

{% block content_data_alert %}{% endblock %}
{% block content_data_submit %}{% endblock %}
{% block content_data_errors %}{% endblock %}

{% block content_data_form_action %}
    {{ path('fos_user_resetting_reset', {'token': token}) }}
{% endblock %}

{% block tagline_data %}
    <i class="fa fa-lock"></i> {{ (instance.translation ~ '.front.resetting.reset.title')|trans }}
{% endblock %}

{% block content_data_fields_data %}
    <div class="row">
        <div class="column medium-6 medium-centered">
            <div>
                {{ form_label(form.plainPassword.first) }}
                {{ form_errors(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first) }}
            </div>
            <div>
                {{ form_label(form.plainPassword.second) }}
                {{ form_errors(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second) }}
            </div>
            <div>
                {{ form_widget(form.submitSave, {'attr':{'class':'small fullwidth'}}) }}
            </div>
        </div>
    </div>
{% endblock %}