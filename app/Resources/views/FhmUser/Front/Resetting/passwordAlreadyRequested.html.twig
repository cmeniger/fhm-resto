{% set instance = {'domain':'FhmUserBundle', 'translation':'user', 'route':'user', 'source':'fhm'} %}
{% set breadcrumbs = [{'link':path('project_home'), 'text':'project.home.breadcrumb'|trans({},'ProjectDefaultBundle')}, {'link':'', 'text':('user.front.create.breadcrumb')|trans({},'FhmUserBundle'), 'current':true}] %}
{% trans_default_domain instance.domain %}
{% extends "::FhmFhm/Front/index.html.twig" %}

{% block tagline_data %}
    <i class="fa fa-user-plus"></i> {{ 'user.front.resetting.error.title'|trans }}
{% endblock %}

{% block content %}
    <div class="row">
        {# Mail #}
        <div class="panel">
            <h3>{{ 'user.front.resetting.error.mail.title'|trans|raw }}</h3>
            {{ 'user.front.resetting.error.mail.text'|trans|raw }}
        </div>

        {# FAQ #}
        <div class="panel">
            <h3>{{ 'user.front.resetting.error.faq.title'|trans|raw }}</h3>
            <ul>
                <li>{{ 'user.front.resetting.error.faq.list1'|trans|raw }}</li>
                <li>{{ 'user.front.resetting.error.faq.list2'|trans|raw }}</li>
            </ul>
        </div>
    </div>
{% endblock %}