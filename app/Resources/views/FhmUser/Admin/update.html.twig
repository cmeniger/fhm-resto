{% trans_default_domain instance.domain %}
{% set parent_extends = "::FhmFhm/Admin/update.html.twig" %}
{% extends "::FhmGeolocation/Form/map.html.twig" %}

{% block content_data_fields_data %}
    <div class="large-6 medium-6 small-12 columns">
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.update.form.fieldset.connection')|trans }}</legend>
            <div class="row">
                {{ form_label(form.username) }}
                {{ form_errors(form.username) }}
                {{ form_widget(form.username) }}
            </div>
            <div class="row">
                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>
        </fieldset>
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.update.form.fieldset.informations')|trans }}</legend>
            <div class="row">
                {{ form_label(form.first_name) }}
                {{ form_errors(form.first_name) }}
                {{ form_widget(form.first_name) }}
            </div>
            <div class="row">
                {{ form_label(form.last_name) }}
                {{ form_errors(form.last_name) }}
                {{ form_widget(form.last_name) }}
            </div>
            <div class="row">
                {{ form_label(form.birth_date) }}
                {{ form_errors(form.birth_date) }}
                <div class="row">
                    <div class="large-4 columns">
                        {{ form_widget(form.birth_date.day) }}
                    </div>
                    <div class="large-4 columns">
                        {{ form_widget(form.birth_date.month) }}
                    </div>
                    <div class="large-4 columns">
                        {{ form_widget(form.birth_date.year) }}
                    </div>
                </div>
            </div>
            <div class="row">
                {{ form_label(form.sex) }}
                {{ form_errors(form.sex) }}
                {{ form_widget(form.sex) }}
            </div>
            <div class="row">
                {{ form_label(form.tel1) }}
                {{ form_errors(form.tel1) }}
                {{ form_widget(form.tel1) }}
            </div>
            <div class="row">
                {{ form_label(form.tel2) }}
                {{ form_errors(form.tel2) }}
                {{ form_widget(form.tel2) }}
            </div>
            <div class="row">
                {{ form_label(form.avatar) }}
                {{ form_errors(form.avatar) }}
                {{ form_widget(form.avatar) }}
            </div>
            <div class="row">
                {{ form_label(form.sign) }}
                {{ form_errors(form.sign) }}
                {{ form_widget(form.sign) }}
            </div>
        </fieldset>
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.update.form.fieldset.social')|trans }}</legend>
            <div class="form-social">
                <div class="row collapse">
                    <div class="small-3 large-2 columns">
                        <span class="prefix site social-icons"><i class="fa fa-globe"></i></span>
                    </div>
                    <div class="small-9 large-10 columns">
                        {{ form_errors(form.social_site) }}
                        {{ form_widget(form.social_site) }}
                    </div>
                </div>
                <div class="row collapse">
                    <div class="small-3 large-2 columns">
                        <span class="prefix facebook social-icons"><i class="fa fa-facebook"></i></span>
                    </div>
                    <div class="small-7 large-7 columns">
                        {{ form_errors(form.social_facebook) }}
                        {{ form_widget(form.social_facebook) }}
                    </div>
                    <div class="small-2 large-3 columns">
                        {{ form_errors(form.social_facebook_id) }}
                        {{ form_widget(form.social_facebook_id) }}
                    </div>
                </div>
                <div class="row collapse">
                    <div class="small-3 large-2 columns">
                        <span class="prefix twitter social-icons"><i class="fa fa-twitter"></i></span>
                    </div>
                    <div class="small-7 large-7 columns">
                        {{ form_errors(form.social_twitter) }}
                        {{ form_widget(form.social_twitter) }}
                    </div>
                    <div class="small-2 large-3 columns">
                        {{ form_errors(form.social_twitter_id) }}
                        {{ form_widget(form.social_twitter_id) }}
                    </div>
                </div>
                <div class="row collapse">
                    <div class="small-3 large-2 columns">
                        <span class="prefix google social-icons"><i class="fa fa-google"></i></span>
                    </div>
                    <div class="small-7 large-7 columns">
                        {{ form_errors(form.social_google) }}
                        {{ form_widget(form.social_google) }}
                    </div>
                    <div class="small-2 large-3 columns">
                        {{ form_errors(form.social_google_id) }}
                        {{ form_widget(form.social_google_id) }}
                    </div>
                </div>
                <div class="row collapse">
                    <div class="small-3 large-2 columns">
                        <span class="prefix instagram social-icons"><i class="fa fa-instagram"></i></span>
                    </div>
                    <div class="small-9 large-10 columns">
                        {{ form_errors(form.social_instagram) }}
                        {{ form_widget(form.social_instagram) }}
                    </div>
                </div>
                <div class="row collapse">
                    <div class="small-3 large-2 columns">
                        <span class="prefix youtube social-icons"><i class="fa fa-youtube-play"></i></span>
                    </div>
                    <div class="small-9 large-10 columns">
                        {{ form_errors(form.social_youtube) }}
                        {{ form_widget(form.social_youtube) }}
                    </div>
                </div>
                <div class="row collapse">
                    <div class="small-3 large-2 columns">
                        <span class="prefix flux social-icons"><i class="fa fa-rss"></i></span>
                    </div>
                    <div class="small-9 large-10 columns">
                        {{ form_errors(form.social_flux) }}
                        {{ form_widget(form.social_flux) }}
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="large-6 medium-6 small-12 columns">
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.update.form.fieldset.map')|trans }}</legend>
            {% block geolocation_map %}
                {{ parent() }}
            {% endblock %}
        </fieldset>
    </div>
{% endblock %}

{% block content_data_options_data %}
    <div class="large-12 columns">
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.update.form.fieldset.options')|trans }}</legend>
            <div class="large-2 medium-3 small-4 columns">
                {{ form_errors(form.enabled) }}
                {{ form_label(form.enabled) }}
                <div class="switch">
                    {{ form_widget(form.enabled) }}
                    <label for="{{ form.enabled.vars.id }}"></label>
                </div>
            </div>
        </fieldset>
    </div>
{% endblock %}