{% else %}
    <div class="slider home row">
        {% for item in items %}
            <div class="slider-item" style="background: url({{ item.getImage()|media }})">
                <div class="caption">
                    <h2>{{ item.getTitle() }}</h2>
                    <p>{{ item.getContent()|raw }}</p>
                    {% if item.getLink() %}
                        <a href="{{ item.getLink() }}" target="_blank">{{ (instance.translation ~ '.api.more')|trans }}</a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
<script>
    $(document).ready(function ()
    {
        $('.slider').slick({
            autoplay: true,
            dots:     true,
            infinite: true,
            fade:     true,
            speed:    500,
            cssEase:  'linear'
        });
    });
</script>
