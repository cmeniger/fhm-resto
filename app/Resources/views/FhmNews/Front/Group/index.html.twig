{% trans_default_domain instance.domain %}
{% extends "::FhmFhm/Front/index.html.twig" %}

{% block content_data %}
    {% if documents %}
        <div id="content_data" class="newsgroup">
            {% for document in documents %}
                <div class="row panel newsgroup-short">
                    <div class="column large-3 medium-4 small-12">
                        <div class="newsgroup-image" style="background: url('{{ asset("/images/common/newsgroup-cover-default.jpg") }}') center center no-repeat;"></div>
                    </div>
                    <div class="column large-9 medium-8 small-12">
                        <div class="newsgroup-text">
                            <h2 class="newsgroup-name">
                                <a href="{{ path('fhm_news_group_lite', {id: document.getAlias()}) }}">{{ document.getName() }}</a>
                            </h2>

                            <p>{{ (instance.translation ~ '.front.index.form.news')|trans }}:
                                <strong>{{ document.allnews|length }}</strong></p>
                            <a class="more button tiny right" href="{{ path('fhm_news_group_lite', {id: document.getAlias()}) }}">{{ (instance.translation ~ '.front.index.form.more')|trans }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="panel nodata row">
            <p>{{ (instance.translation ~ '.front.index.nodata')|trans }}</p>
        </div>
    {% endif %}
{% endblock %}