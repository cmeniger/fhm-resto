<div class="card">
    <ul class="tabs card-tabs" data-tab>
        {% for category in documents %}
            <li class="tab-title {{ loop.index0 == 0 ? 'active' : '' }}">
                <a href="#tab{{ category.getId() }}" class="title" data-image="{{ category.getImage()|media('s') }}"><span>{{ category.getName() }}</span></a></li>
        {% endfor %}
    </ul>
    <div class="tabs-content">
        {% for category in documents %}
            {% include category.getMenu() ? "::FhmCard/Template/Tabs/menu.html.twig" : "::FhmCard/Template/Tabs/inline.html.twig" %}
        {% endfor %}
    </div>
</div>
