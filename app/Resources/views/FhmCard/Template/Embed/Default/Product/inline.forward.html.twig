{% trans_default_domain instance.domain %}

<li>
    <div class="item">
        <div class="front" style="background:url('{{ product.getImage()|media('s', asset('images/default-card.jpg')) }}') center center no-repeat">
            {% if product.getCaption() %}
                <span class="title">{{ product.getName() }}</span>
                {% if product.getPrice() %}
                    <span class="price">{{ product.getPrice() }}<span>{{ product.getCurrency() }}</span></span>
                {% endif %}
            {% endif %}
        </div>
        <div class="back">
            <span class="title">{{ product.getName() }}</span>
            {% if product.getIngredients().count() > 0 %}
                {{ render(path('fhm_api_card_ingredient_embed', {idCard:card.getId(), idProduct:product.getId(), folder:folder, template:'inline'})) }}
            {% endif %}
        </div>
    </div>
</li>