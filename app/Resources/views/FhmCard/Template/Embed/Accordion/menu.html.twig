{% trans_default_domain instance.domain %}

<li class="accordion-navigation">
    <a href="#accordion{{ category.getId() }}" class="title">{{ category.getName() }}</a>
    <div id="accordion{{ category.getId() }}" class="content {{ loop.index0 == 0 ? 'active' : '' }}">
        <div class="bloc">
            <div class="title">
                <span class="price">{{ category.getPrice() }}{{ category.getCurrency() }}</span>
            </div>
            {% if category.getDescription() %}
                <div class="description">
                    {{ category.getDescription() }}
                </div>
            {% endif %}
            {% if category.getProducts().count() > 0 %}
                {{ render(path('fhm_api_card_product_embed', {idCard:document.getId(), idCategory:category.getId(), folder:'default', template:'menu'})) }}
            {% endif %}
            {% if category.getSons().count() > 0 %}
                {{ render(path('fhm_api_card_category_embed', {idCard:document.getId(), idCategory:category.getId(), folder:'default', template:'index'})) }}
            {% endif %}
        </div>
    </div>
</li>