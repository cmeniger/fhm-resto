{% trans_default_domain instance.domain %}

{% set forward = false %}
{% if products %}
    <div class="product">
        <ul>
            {% for product in products %}
                {% if product.getForward() != forward %}
                    </ul><ul class="{{ product.getForward() ? 'forward small-block-grid-2 medium-block-grid-3 large-block-grid-4' : '' }}">
                    {% set forward = product.getForward() %}
                {% endif %}
                {% include product.getForward() ? "::FhmCard/Template/Product/inline.forward.html.twig" : "::FhmCard/Template/Product/inline.inline.html.twig" %}
            {% endfor %}
        </ul>
    </div>
{% endif %}