{% trans_default_domain instance.domain %}
<div class="form form-update">
    <form action="{{ path('fhm_api_card_ingredient_update',{idCard:card.getId(), idIngredient:ingredient.getId(), template:template}) }}" method="POST">
        {% if form.vars.errors|length > 0 %}
            <div class="form-bloc form-error">
                <div class="row">
                    {{ form_errors(form) }}
                </div>
            </div>
        {% endif %}
        <div class="form-bloc form-fields row">
            <div class="columns">
                <fieldset>
                    <legend>{{ (instance.translation ~ '.api.update.form.fieldset.data')|trans }}</legend>
                    <div class="row">
                        {{ form_label(form.name) }}
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="form-bloc form-submit text-center">
            {{ form_widget(form.submitSave, {'attr':{'class':'small button-icon button-save button'}}) }}
        </div>
        <div class="form-bloc form-rest">
            <div class="row">
                {{ form_rest(form) }}
            </div>
        </div>
    </form>
</div>