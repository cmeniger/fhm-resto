{% trans_default_domain instance.domain %}
{% extends "::FhmFhm/Admin/create.html.twig" %}

{% block content_data_fields_data %}
    <div class="large-6 medium-6 small-12 columns">
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.create.form.fieldset.data')|trans }}</legend>
            <div class="row">
                {{ form_label(form.name) }}
                {{ form_errors(form.name) }}
                {{ form_widget(form.name) }}
            </div>
            <div class="row">
                {{ form_label(form.description) }}
                {{ form_errors(form.description) }}
                {{ form_widget(form.description) }}
            </div>
            <div class="row">
                {{ form_label(form.card) }}
                {{ form_errors(form.card) }}
                {{ form_widget(form.card) }}
            </div>
            <div class="row">
                <div class="row collapse">
                    {{ form_label(form.price) }}
                    <div class="small-10 columns">
                        {{ form_errors(form.price) }}
                        {{ form_widget(form.price) }}
                    </div>
                    <div class="small-2 columns">
                        {{ form_errors(form.currency) }}
                        {{ form_widget(form.currency) }}
                    </div>
                </div>
            </div>
            <div class="row">
                {{ form_label(form.order) }}
                {{ form_errors(form.order) }}
                {{ form_widget(form.order) }}
            </div>
            <div class="row">
                {{ form_label(form.image) }}
                {{ form_errors(form.image) }}
                {{ form_widget(form.image) }}
            </div>
        </fieldset>
    </div>
    <div class="large-6 medium-6 small-12 columns">
        <fieldset>
            <legend>{{ (instance.translation ~ '.admin.create.form.fieldset.data2')|trans }}</legend>
            <div class="row">
                {{ form_label(form.categories) }}
                {{ form_errors(form.categories) }}
                {{ form_widget(form.categories) }}
            </div>
            <div class="row">
                {{ form_label(form.ingredients) }}
                {{ form_errors(form.ingredients) }}
                {{ form_widget(form.ingredients) }}
            </div>
        </fieldset>
    </div>
{% endblock %}

{% block content_data_options_data_add %}
    <div class="large-2 columns end">
        {{ form_errors(form.forward) }}
        {{ form_label(form.forward) }}
        <div class="switch">
            {{ form_widget(form.forward) }}
            <label for="{{ form.forward.vars.id }}"></label>
        </div>
    </div>
    <div class="large-2 columns end">
        {{ form_errors(form.default) }}
        {{ form_label(form.default) }}
        <div class="switch">
            {{ form_widget(form.default) }}
            <label for="{{ form.default.vars.id }}"></label>
        </div>
    </div>
{% endblock %}