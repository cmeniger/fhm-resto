{% trans_default_domain instance.domain %}
{% extends "::FhmFhm/Admin/index.html.twig" %}

{% block content_data_header_language %}{% endblock %}
{% block content_data_language %}{% endblock %}

{% block content_data_header %}
    <th {% if pagination.isSorted('create_date') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, (instance.translation ~ '.admin.index.table.header.date')|trans, 'create_date')|raw }}</th>
    <th {% if pagination.isSorted('email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, (instance.translation ~ '.admin.index.table.header.email')|trans, 'email')|raw }}</th>

{% endblock %}

{% block content_data_body %}
    <td>{{ document.getDateCreate() | localizeddate('full', 'short', app.request.locale) }}</td>
    <td>{{ document.getEmail() }}</td>
{% endblock %}