{% trans_default_domain instance.domain %}
{% extends "::FhmFhm/Admin/index.html.twig" %}

{% block content_data_header_status %}{% endblock %}
{% block content_data_status %}{% endblock %}
{% block content_data_action_links %}{% endblock %}
{% block content_data_action_delete_links %}{% endblock %}
{% block content_data_action_share_links %}{% endblock %}

{% block content_link_data %}
    <li>
        <a href="{{ path('fhm_admin') }}" class="button small secondary"><i class="fa fa-angle-double-left"></i></a>
    </li>
    <li>
        <a href="{{ path('fhm_admin_' ~ instance.route ~ '_import') }}" class="button small"><i class="fa fa-download"></i> {{ (instance.translation ~ '.admin.import.link')|trans }}
        </a>
    </li>
    <li>
        <a href="{{ path('fhm_admin_' ~ instance.route ~ '_export') }}" class="button small"><i class="fa fa-upload"></i> {{ (instance.translation ~ '.admin.export.link')|trans }}
        </a>
    </li>
    <li>
        <a href="{{ path('fhm_admin_contact') }}" class="button small"><i class="fa fa-map-marker"></i> {{ ('contact.admin.index.link')|trans }}
        </a>
    </li>
{% endblock %}

{% block content_data_header %}
    <th>{{ (instance.translation ~ '.admin.index.table.header.date')|trans }}</th>
    <th>{{ (instance.translation ~ '.admin.index.table.header.contact')|trans }}</th>
    <th>{{ (instance.translation ~ '.admin.index.table.header.name')|trans }}</th>
    <th>{{ (instance.translation ~ '.admin.index.table.header.email')|trans }}</th>
{% endblock %}

{% block content_data_body %}
    <td>{{ document.getDateCreate() | localizeddate('short', 'short', app.request.locale) }}</td>
    <td>{{ document.getContact().getName() }}</td>
    <td>{{ document.getName() }}</td>
    <td>{{ document.getEmail() }}</td>
{% endblock %}

{% block content_data_action_button %}
    <a href="{{ path(instance.source ~ '_admin_' ~ instance.route ~ '_detail', {'id': document.getId()}) }}" class="tiny radius button split no-pip"><i class="fa fa-search"></i> {{ (instance.translation ~ '.admin.index.table.action.detail')|trans }}
        <span data-dropdown="action{{ document.getId() }}"><i class="fa fa-angle-down"></i></span></a>
{% endblock %}

{% block content_data_action_delete_button %}
    <a href="{{ path(instance.source ~ '_admin_' ~ instance.route ~ '_detail', {'id': document.getId()}) }}" class="tiny radius button split no-pip alert"><i class="fa fa-search"></i> {{ (instance.translation ~ '.admin.index.table.action.detail')|trans }}
        <span data-dropdown="action{{ document.getId() }}"><i class="fa fa-angle-down"></i></span></a>
{% endblock %}

{% block content_data_action_share_button %}
    <a href="{{ path(instance.source ~ '_admin_' ~ instance.route ~ '_detail', {'id': document.getId()}) }}" class="tiny radius button split no-pip warning"><i class="fa fa-search"></i> {{ (instance.translation ~ '.admin.index.table.action.detail')|trans }}
{% endblock %}