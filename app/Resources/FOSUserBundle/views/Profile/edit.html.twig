{% set instance = instance|merge({'domain':'FhmUserBundle', 'translation':'user', 'route':'user', 'source':'fhm'}) %}
{% set breadcrumbs = [{'link':path('project_home'), 'text':'project.home.breadcrumb'|trans({},'ProjectDefaultBundle')}, {'link':path('fos_user_profile_show'), 'text':('user.front.detail.breadcrumb')|trans({},'FhmUserBundle')}, {'link':'', 'text':('user.front.update.breadcrumb')|trans({},'FhmUserBundle'), 'current':true}] %}
{% set document = app.user %}
{% set parent_extends = "::FhmFhm/Front/update.html.twig" %}
{% set layout_extend = "::layout.user.html.twig" %}
{% trans_default_domain instance.domain %}
{% extends "::FhmGeolocation/Form/map.html.twig" %}

{% block content_data_alert %}{% endblock %}
{% block content_data_submit_cancel %}{% endblock %}
{% block content_data_submit_list %}{% endblock %}

{% block tagline_data %}
    <i class="fa fa-pencil"></i> {{ parent() }}
{% endblock %}

{% block content_data_form_action %}
    {{ path('fos_user_profile_edit') }}
{% endblock %}

{% block content_data_fields_data %}
    <div class="row">
        <div class="large-6 medium-6 columns">
            <fieldset>
                <legend>{{ (instance.translation ~ '.front.update.form.fieldset.connection')|trans }}</legend>
                <div class="row">
                    {{ form_label(form.username) }}
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username) }}
                </div>
                <div class="row">
                    {{ form_label(form.email) }}
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
            </fieldset>
            <fieldset>
                <legend>{{ (instance.translation ~ '.front.update.form.fieldset.informations')|trans }}</legend>
                <div class="row">
                    {{ form_label(form.first_name) }}
                    {{ form_errors(form.first_name) }}
                    {{ form_widget(form.first_name) }}
                </div>
                <div class="row">
                    {{ form_label(form.last_name) }}
                    {{ form_errors(form.last_name) }}
                    {{ form_widget(form.last_name) }}
                </div>
                <div class="row">
                    {{ form_label(form.birth_date) }}
                    {{ form_errors(form.birth_date) }}
                    <div class="row">
                        <div class="large-4 columns">
                            {{ form_widget(form.birth_date.day) }}
                        </div>
                        <div class="large-4 columns">
                            {{ form_widget(form.birth_date.month) }}
                        </div>
                        <div class="large-4 columns">
                            {{ form_widget(form.birth_date.year) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    {{ form_label(form.sex) }}
                    {{ form_errors(form.sex) }}
                    {{ form_widget(form.sex) }}
                </div>
                <div class="row">
                    {{ form_label(form.tel1) }}
                    {{ form_errors(form.tel1) }}
                    {{ form_widget(form.tel1) }}
                </div>
                <div class="row">
                    {{ form_label(form.tel2) }}
                    {{ form_errors(form.tel2) }}
                    {{ form_widget(form.tel2) }}
                </div>
                <div class="row">
                    {{ form_label(form.avatar) }}
                    {{ form_errors(form.avatar) }}
                    {{ form_widget(form.avatar) }}
                </div>
                <div class="row">
                    {{ form_label(form.sign) }}
                    {{ form_errors(form.sign) }}
                    {{ form_widget(form.sign) }}
                </div>
            </fieldset>
            {#{% if document.getIdFacebook()==null %}#}
            <fieldset>
                <legend>{{ (instance.translation ~ '.front.update.form.fieldset.security')|trans }}</legend>
                <div class="row">
                    {{ form_label(form.current_password) }}
                    {{ form_errors(form.current_password) }}
                    {{ form_widget(form.current_password) }}
                </div>
            </fieldset>
            {#{% endif %}#}
        </div>
        <div class="large-6 medium-6 columns">
            <fieldset>
                <legend>{{ (instance.translation ~ '.front.update.form.fieldset.map')|trans }}</legend>
                <div class="row">
                    <div class="column medium-6 map-form">
                        <div class="">
                            {{ form_label(form.address_search) }}
                            {{ form_errors(form.address_search) }}
                            {{ form_widget(form.address_search) }}
                        </div>
                        <div id="map" class="map"></div>
                    </div>
                    <div class="column medium-6">
                        <div>
                            {{ form_label(form.address_main) }}
                            {{ form_errors(form.address_main) }}
                            {{ form_widget(form.address_main) }}
                        </div>
                        <div>
                            {{ form_label(form.address_additional) }}
                            {{ form_errors(form.address_additional) }}
                            {{ form_widget(form.address_additional) }}
                        </div>
                        <div>
                            {{ form_label(form.zip_code) }}
                            {{ form_errors(form.zip_code) }}
                            {{ form_widget(form.zip_code) }}
                        </div>
                        <div>
                            {{ form_label(form.city) }}
                            {{ form_errors(form.city) }}
                            {{ form_widget(form.city) }}
                        </div>
                        <div>
                            {{ form_label(form.country) }}
                            {{ form_errors(form.country) }}
                            {{ form_widget(form.country) }}
                        </div>
                        <div class="row">
                            <div class="column small-6">
                                {{ form_label(form.latitude) }}
                                {{ form_widget(form.latitude) }}
                            </div>
                            <div class="column small-6">
                                {{ form_label(form.longitude) }}
                                {{ form_widget(form.longitude) }}
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>{{ (instance.translation ~ '.front.update.form.fieldset.social')|trans }}</legend>
                <div class="form-social">
                    <div class="row collapse">
                        <div class="small-3 large-2 columns">
                            <span class="prefix site social-icons"><i class="fa fa-globe"></i></span>
                        </div>
                        <div class="small-9 large-10 columns">
                            {{ form_errors(form.social_site) }}
                            {{ form_widget(form.social_site, {'attr': {'placeholder': 'http://'}}) }}
                        </div>
                    </div>
                    <div class="row collapse">
                        <div class="small-3 large-2 columns">
                            <span class="prefix facebook social-icons"><i class="fa fa-facebook"></i></span>
                        </div>
                        <div class="small-7 large-7 columns">
                            {{ form_errors(form.social_facebook) }}
                            {{ form_widget(form.social_facebook, {'attr': {'placeholder': 'http://'}}) }}
                        </div>
                        <div class="small-2 large-3 columns">
                            {{ form_errors(form.social_facebook_id) }}
                            {{ form_widget(form.social_facebook_id, {'attr': {'placeholder': 'ID'}}) }}
                        </div>
                    </div>
                    <div class="row collapse">
                        <div class="small-3 large-2 columns">
                            <span class="prefix twitter social-icons"><i class="fa fa-twitter"></i></span>
                        </div>
                        <div class="small-7 large-7 columns">
                            {{ form_errors(form.social_twitter) }}
                            {{ form_widget(form.social_twitter, {'attr': {'placeholder': 'http://'}}) }}
                        </div>
                        <div class="small-2 large-3 columns">
                            {{ form_errors(form.social_twitter_id) }}
                            {{ form_widget(form.social_twitter_id, {'attr': {'placeholder': 'ID'}}) }}
                        </div>
                    </div>
                    <div class="row collapse">
                        <div class="small-3 large-2 columns">
                            <span class="prefix google social-icons"><i class="fa fa-google"></i></span>
                        </div>
                        <div class="small-7 large-7 columns">
                            {{ form_errors(form.social_google) }}
                            {{ form_widget(form.social_google, {'attr': {'placeholder': 'http://'}}) }}
                        </div>
                        <div class="small-2 large-3 columns">
                            {{ form_errors(form.social_google_id) }}
                            {{ form_widget(form.social_google_id, {'attr': {'placeholder': 'ID'}}) }}
                        </div>
                    </div>
                    <div class="row collapse">
                        <div class="small-3 large-2 columns">
                            <span class="prefix instagram social-icons"><i class="fa fa-instagram"></i></span>
                        </div>
                        <div class="small-9 large-10 columns">
                            {{ form_errors(form.social_instagram) }}
                            {{ form_widget(form.social_instagram, {'attr': {'placeholder': 'http://'}}) }}
                        </div>
                    </div>
                    <div class="row collapse">
                        <div class="small-3 large-2 columns">
                            <span class="prefix youtube social-icons"><i class="fa fa-youtube-play"></i></span>
                        </div>
                        <div class="small-9 large-10 columns">
                            {{ form_errors(form.social_youtube) }}
                            {{ form_widget(form.social_youtube, {'attr': {'placeholder': 'http://'}}) }}
                        </div>
                    </div>
                    <div class="row collapse">
                        <div class="small-3 large-2 columns">
                            <span class="prefix flux social-icons"><i class="fa fa-rss"></i></span>
                        </div>
                        <div class="small-9 large-10 columns">
                            {{ form_errors(form.social_flux) }}
                            {{ form_widget(form.social_flux, {'attr': {'placeholder': 'http://'}}) }}
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
{% endblock %}

{% block content_data_submit_data %}
    <div class="row">
        <div class="column medium-3 medium-centered">
            {{ form_widget(form.submitSave, {'attr':{'class':'button small fullwidth'}}) }}
        </div>
    </div>
{% endblock %}